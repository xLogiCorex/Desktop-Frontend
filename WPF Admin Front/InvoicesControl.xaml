<UserControl x:Class="WPF_Admin_Front.InvoicesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Admin_Front"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>  <!-- Cím -->
            <RowDefinition Height="Auto"/>  <!-- Invoices lista -->
            <RowDefinition Height="Auto"/>  <!-- Invoices DataGrid -->
        </Grid.RowDefinitions>
        <!-- Cím -->
        <TextBlock Text="Számlák" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Grid.Row="0"/>
        <!-- Invoices lista -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
            <Label Content="Keresés:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="10,0,0,0" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>
        <!-- Invoices DataGrid -->
        <DataGrid x:Name="InvoicesDataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Height="380">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="auto"/>
                <DataGridTextColumn Header="Számlaszám" Binding="{Binding invoiceNumber}" Width="auto"/>
                <DataGridTextColumn Header="Rendelésszám" Binding="{Binding orderNumber}" Width="auto"/>
                <DataGridTextColumn Header="Partner" Binding="{Binding partnerName}" Width="auto"/>
                <DataGridTextColumn Header="Létrehozta" Binding="{Binding username}" Width="auto"/>
                <DataGridTextColumn Header="Létrehozás dátuma" Binding="{Binding issueDate}" Width="auto"/>
                <DataGridTextColumn Header="Nettó összeg" Binding="{Binding totalNet}" Width="auto"/>
                <DataGridTextColumn Header="Bruttó összeg" Binding="{Binding totalGross}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
