<Window x:Class="WPF_Admin_Front.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Admin_Front"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
            <Setter Property="Width" Value="340"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,12,0,12"/>
            <Setter Property="Width" Value="340"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="200,20,200,0"/>
            <Setter Property="Background" Value="#30336b"/>
            <Setter Property="Foreground" Value="#dff9fb"/>
        </Style>
    </Window.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
            FocusManager.IsFocusScope="True"
            FocusManager.FocusedElement="{Binding ElementName=emailInput}">
        <Label Content="Bejelentkezés" FontSize="40" Margin="0,30,0,20" HorizontalAlignment="Center"/>

        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Label Content="Email" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Name="emailInput" Grid.Column="1" Grid.Row="0" Width="280" HorizontalAlignment="Left"/>
            <Label Content="Jelszó" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <PasswordBox Name="passwordInput" Grid.Column="1" Grid.Row="1" Width="280" HorizontalAlignment="Left"/>

            <Image Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
               Source="/Assets/logo.png" Width="120" Height="120"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Stretch="Uniform" Margin="53,2,0,0"/>
        </Grid>

        <Button Content="Belépés" Click="Login" IsDefault="True" Width="200" Height="60"/>
    </StackPanel>
</Window>
