<Window x:Class="Desktop.AdminApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="AdminApp" Height="800" Width="1600">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="100 20 100 20"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="LogiCore" Grid.ColumnSpan="2" FontSize="40"/>
        <Grid Grid.ColumnSpan="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Content="Rendelések száma:"/>
            <Label Content="Készletérték:" Grid.Row="1"/>
            <Label Content="Kedvenc termékek:" Grid.Row="2"/>
        </Grid>
        <Button Content="Termékkezelés" Grid.Column="0" Grid.Row="2" Click="Products"/>
        <Button Content="Felhasználók" Grid.Column="0" Grid.Row="3" Click="Users"/>
        <Button Content="Partnerek" Grid.Column="0" Grid.Row="4" Click="Partners"/>
        <Button Content="Rendelések" Grid.Column="1" Grid.Row="2" Click="Orders"/>
        <Button Content="Számlák" Grid.Column="1" Grid.Row="3" Click="Invoices"/>
        <Button Content="Napló" Grid.Column="1" Grid.Row="4" Click="Logs"/>
    </Grid>
</Window>
