<UserControl x:Class="WPF_Admin_Front.LogsControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Admin_Front"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Naplózás" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Grid.Row="0"/>
        <!--Log lista--> 
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
            <Label Content="Keresés:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="10,0,0,0" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>
         <!--Logs DataGrid--> 
        <DataGrid x:Name="LogsDataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Height="380">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="auto"/>
                <DataGridTextColumn Header="Felhasználó" Binding="{Binding username}" Width="auto"/>
                <DataGridTextColumn Header="Információ" Binding="{Binding action}" Width="auto"/>
                <DataGridTextColumn Header="Típus" Binding="{Binding targetType}" Width="auto"/>
                <DataGridTextColumn Header="Részletek" Binding="{Binding payload}" Width="auto"/>
                <DataGridTextColumn Header="Létrehozás dátuma" Binding="{Binding createdAt}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
