<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="40,27,76,28"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="LogiCore" Grid.ColumnSpan="2" FontSize="40"/>
        <Label Content="Felhasználónév" Grid.Row="1"/>
        <TextBox Name="emailInput" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Jelszó" Grid.Row="2"/>
        <PasswordBox Name="passwordInput" Grid.Column="1" Grid.Row="2" Margin="40,27,76,28" FontSize="20" FontStretch="Medium" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="emailInput_Copy"  Grid.Column="1" Grid.Row="3" Margin="40,27,76,28" FontSize="20" FontStretch="Medium" VerticalContentAlignment="Center"/>
        <Label Content="Jelszó ismét" Grid.Row="3"/>
        <Button Content="Belépés" FontSize="30" Grid.ColumnSpan="2" Grid.Row="4" Margin="200 20" Click="Login" Background="#30336b" Foreground="#dff9fb"/>
    </Grid>
</Window>
