<UserControl x:Class="WPF_Admin_Front.UsersControl"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Admin_Front"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>    <!-- Cím -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Felhasználók" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL: Kereső + Lista -->
        <StackPanel Grid.Column="0">
            <!-- Kereső -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Keresés:" VerticalAlignment="Center"/>
                <TextBox x:Name="SearchBox" Width="200" Margin="10,0,0,0" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
            <!-- Lista -->
            <DataGrid x:Name="UsersDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  Height="380"
                  CellEditEnding="UsersDataGrid_CellEditEnding">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Név" Binding="{Binding name}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="E-mail" Binding="{Binding email}" Width="auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Szerepkör" Binding="{Binding role}" Width="auto" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Header="Aktív" Binding="{Binding isActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- JOBB OLDAL: Új felhasználó űrlap -->
        <Border Grid.Column="1" Margin="30,0,0,0" Padding="20" Background="#f1f2f6" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Felhasználó felvétel" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                <TextBlock Text="Név:"/>
                <TextBox x:Name="NameBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="E-mail:"/>
                <TextBox x:Name="EmailBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Jelszó:"/>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Szerepkör:"/>
                <ComboBox x:Name="RoleBox" Width="200" Margin="0,0,0,10" SelectedIndex="-1">
                    <sys:String>admin</sys:String>
                    <sys:String>sales</sys:String>
                </ComboBox>
                <CheckBox x:Name="IsActiveBox" Content="Aktív" IsChecked="True" Margin="0,0,0,10"/>
                <Button Content="Felhasználó hozzáadása" Click="AddUser_Click" Width="Auto" Padding="5" Background="#30336b" Foreground="White"/>
            </StackPanel>
        </Border>
        </Grid>
    </Grid>
</UserControl>
