<UserControl x:Class="Desktop.PostProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <Grid>
        <Border Padding="10" Background="#dff9fb" Margin="40,0,0,0" CornerRadius="8" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="Új termék felvétel" FontWeight="Bold" FontSize="18" Margin="0,10,0,15" HorizontalAlignment="Center"/>
                <TextBlock Text="SKU:"/>
                <TextBox x:Name="SkuBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Név:"/>
                <TextBox x:Name="NameBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Kategória:"/>
                <ComboBox x:Name="CategoryBox" Width="200" Margin="0,0,0,10" DisplayMemberPath="name" SelectedValuePath="id" SelectedIndex="-1" SelectionChanged="CategoryBox_SelectionChanged"/>
                <TextBlock Text="Alkategória:"/>
                <ComboBox x:Name="SubcategoryBox" Width="200" Margin="0,0,0,10" DisplayMemberPath="name" SelectedValuePath="id" SelectedIndex="-1"/>
                <TextBlock Text="Mértékegység:"/>
                <ComboBox x:Name="UnitBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Ár:"/>
                <TextBox x:Name="PriceBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Mennyiség:"/>
                <TextBox x:Name="StockQuantityBox" Width="200" Margin="0,0,0,10"/>
                <TextBlock Text="Minimális mennyiség:"/>
                <TextBox x:Name="MinStockLevelBox" Width="200" Margin="0,0,0,10"/>
                <CheckBox x:Name="IsActiveBox" Content="Aktív" IsChecked="True" Margin="0,0,0,10"/>
                <Button Content="Termék hozzáadása" Click="AddProduct_Click" Width="Auto" Padding="5" Background="#30336b" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
